<h1>Listing all users</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "name"%></th>
      <th><%= sortable "id"%></th>
      <th><%= sortable "email"%></th>
      <th><%= sortable "encrypted_password", " password"%></th>
      <th><%= sortable "admin"%></th>
      <th><%= sortable "created_at"%></th>
      <th></th>

    </tr>
  </thead>
  <% if @user.admin %>
  <%= @user.email %>
  <h1>USER IS AN ADMIN</h1>
  <% else %>
  <h1>USER IS A USER</h1>
  <% end%>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to("Profile", user_documents_path(user)) %></td>
        <td>Unhappy? <%= button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete, params: {user_to_delete:user.id} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<%= link_to "Create new user",  new_user_registration_path %><br />


